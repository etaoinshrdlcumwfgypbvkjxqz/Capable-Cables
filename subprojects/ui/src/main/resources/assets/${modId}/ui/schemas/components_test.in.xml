<?xml version="1.0" encoding="UTF-8" ?>
<ui xmlns="https://github.com/etaoinshrdlcumwfgypbvkjxqz/Capable-Cables/schemas/ui/components"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:val="https://github.com/etaoinshrdlcumwfgypbvkjxqz/Capable-Cables/schemas/ui/components/values"
    xml:lang="EN">
	<!-- SECTION using -->

	<!-- COMMENT shapes -->
	<using alias="shape.rectangle" target="java.awt.geom.Rectangle2D"/>
	<using alias="shape.ellipse" target="java.awt.geom.Ellipse2D"/>
	<!-- COMMENT components -->
	<using alias="component.manager" target="${group}.ui.minecraft.mvvm.components.UIComponentManagerMinecraft"/>
	<using alias="component.window"
	       target="${group}.ui.minecraft.mvvm.components.common.UIComponentWindowMinecraft"/>
	<using alias="component.button"
	       target="${group}.ui.minecraft.mvvm.components.common.UIComponentButtonMinecraft"/>
	<!-- COMMENT renderer -->
	<using alias="renderer.component.window.default"
	       target="${group}.ui.minecraft.mvvm.components.common.UIComponentWindowMinecraft\$DefaultRenderer"/>
	<using alias="renderer.component.window.debug.custom"
	       target="${group}.ui.debug.UIDebugMinecraft\$DebugUI\$CustomWindowRenderer"/>
	<using alias="renderer.component.button.default"
	       target="${group}.ui.minecraft.mvvm.components.common.UIComponentButtonMinecraft\$DefaultRenderer"/>
	<!-- COMMENT extensions -->
	<using alias="extension.minecraft.background.default"
	       target="${group}.ui.minecraft.mvvm.extensions.UIExtensionBackgroundMinecraft\$Default"/>
	<using alias="extension.user_relocatable"
	       target="${group}.ui.mvvm.views.components.extensions.UIExtensionComponentUserRelocatable"/>
	<using alias="extension.user_resizable"
	       target="${group}.ui.mvvm.views.components.extensions.UIExtensionComponentUserResizable"/>

	<!-- SECTION view -->
	<view class="extension.user_resizable">

	</view>

	<!-- SECTION component -->
	<component class="component.manager" id="Root">
		<shape class="shape.rectangle"/>

		<extension class="extension.minecraft.background.default"/>

		<component class="component.window" id="Window1">
			<shape class="shape.rectangle" x="10" y="10" width="100" height="100"/>
			<anchor target="manager.window.anchored" originSide="LEFT" targetSide="RIGHT" borderThickness="5"/>

			<renderer class="renderer.component.window.debug.custom">
				<property key="window.colors.border">
					<val:color green="80"/>
				</property>
			</renderer>

			<extension class="extension.user_relocatable"/>
			<extension class="extension.user_resizable"/>
		</component>

		<component class="component.window" id="manager.window.anchored">
			<shape class="shape.rectangle" x="50" y="50" width="200" height="200">
				<constraint minX="20"/>
			</shape>

			<renderer class="renderer.component.window.default">
				<binding key="window.colors.border" binding="anchoredWindowBorderColor"/>
			</renderer>

			<extension class="extension.user_relocatable"/>
			<extension class="extension.user_resizable"/>

			<component class="component.button" id="Button1">
				<binding key="button.methods.activate" binding="buttonOnActivate"/>
				<binding key="button.methods.activated" binding="buttonOnActivated"/>

				<shape class="shape.ellipse" x="0" y="0" width="100" height="100">
					<affineTransformDefiner>
						<method name="rotate">1,1</method>
						<method name="translate" delimiter=" ">10 10</method>
					</affineTransformDefiner>
				</shape>

				<renderer class="renderer.component.button.default">
					<property key="button.colors.hovering">
						<val:color xsi:nil="true"/>
					</property>
				</renderer>
			</component>
		</component>
	</component>
</ui>
