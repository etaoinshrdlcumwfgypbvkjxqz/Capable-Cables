<?xml version="1.0" encoding="UTF-8" ?>
<ui xmlns="https://github.com/etaoinshrdlcumwfgypbvkjxqz/Capable-Cables/schemas/ui/components"
    xml:lang="EN">
	<!-- SECTION aliases -->

	<!-- COMMENT shapes -->
	<using alias="shape.rectangle" class="java.awt.geom.Rectangle2D"/>
	<using alias="shape.ellipse" class="java.awt.geom.Ellipse2D"/>
	<!-- COMMENT components -->
	<using alias="component.manager" class="${group}.ui.minecraft.mvvm.components.UIComponentManagerMinecraft"/>
	<using alias="component.window"
	       class="${group}.ui.minecraft.mvvm.components.common.UIComponentWindowMinecraft"/>
	<using alias="component.button"
	       class="${group}.ui.minecraft.mvvm.components.common.UIComponentButtonMinecraft"/>
	<!-- COMMENT renderer -->
	<using alias="renderer.component.window.default"
	       class="${group}.ui.minecraft.mvvm.components.common.UIComponentWindowMinecraft\$DefaultRenderer"/>
	<using alias="renderer.component.window.debug.custom"
	       class="${group}.ui.debug.UIDebugMinecraft\$DebugUI\$CustomWindowRenderer"/>
	<using alias="renderer.component.button.default"
	       class="${group}.ui.minecraft.mvvm.components.common.UIComponentButtonMinecraft\$DefaultRenderer"/>
	<!-- COMMENT extensions -->
	<using alias="extension.minecraft.background.default"
	       class="${group}.ui.minecraft.mvvm.extensions.UIExtensionBackgroundMinecraft\$Default"/>
	<using alias="extension.user_relocatable"
	       class="${group}.ui.mvvm.views.components.extensions.UIExtensionComponentUserRelocatable"/>
	<using alias="extension.user_resizable"
	       class="${group}.ui.mvvm.views.components.extensions.UIExtensionComponentUserResizable"/>

	<!-- SECTION content -->
	<component class="component.manager">
		<shape class="shape.rectangle"/>

		<extension class="extension.minecraft.background.default"/>

		<component class="component.window">
			<shape class="shape.rectangle" x="10" y="10" width="100" height="100"/>
			<anchor target="manager.window.anchored" originSide="LEFT" targetSide="RIGHT" borderThickness="5"/>

			<renderer class="renderer.component.window.debug.custom">
				<property key="window.colors.border">
					<value>
						<color green="80"/>
					</value>
				</property>
			</renderer>

			<extension class="extension.user_relocatable"/>
			<extension class="extension.user_resizable"/>
		</component>

		<component class="component.window" id="manager.window.anchored">

			<shape class="shape.rectangle" x="50" y="50" width="200" height="200">
				<constraint minX="20"/>
			</shape>

			<renderer class="renderer.component.window.default">
				<binding key="window.colors.border" binding="anchoredWindowBorderColor"/>
			</renderer>

			<extension class="extension.user_relocatable"/>
			<extension class="extension.user_resizable"/>

			<component class="component.button">
				<binding key="button.methods.activate" binding="buttonOnActivate"/>
				<binding key="button.methods.activated" binding="buttonOnActivated"/>

				<shape class="shape.ellipse" x="0" y="0" width="100" height="100">
					<transform>
						<operation method="rotate" delimiter=",">1,1</operation>
						<operation method="translate" delimiter=" ">10 10</operation>
					</transform>
				</shape>

				<renderer class="renderer.component.button.default">
					<property key="button.colors.hovering">
						<value/><!-- COMMENT null -->
					</property>
				</renderer>
			</component>
		</component>
	</component>
</ui>
