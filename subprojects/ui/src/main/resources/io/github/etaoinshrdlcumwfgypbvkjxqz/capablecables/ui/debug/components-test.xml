<?xml version="1.0" encoding="UTF-8" ?>
<ui xmlns="https://github.com/etaoinshrdlcumwfgypbvkjxqz/Capable-Cables/schemas/ui/components"
    xmlns:val="https://github.com/etaoinshrdlcumwfgypbvkjxqz/Capable-Cables/schemas/ui/values"
    xml:lang="EN">
	<!-- SECTION using -->

	<!-- COMMENT shapes -->
	<using alias="shape.rectangle" target="java.awt.geom.Rectangle2D"/>
	<using alias="shape.ellipse" target="java.awt.geom.Ellipse2D"/>
	<!-- COMMENT views -->
	<using alias="view.minecraft"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.impl.minecraft.mvvm.views.components.UIDefaultMinecraftViewComponent"/>
	<!-- COMMENT components -->
	<using alias="component.manager"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.impl.minecraft.mvvm.views.components.UIDefaultMinecraftComponentManager"/>
	<using alias="component.window"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.impl.minecraft.mvvm.views.components.impl.UIMinecraftWindowComponent"/>
	<using alias="component.button"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.impl.minecraft.mvvm.views.components.impl.UIMinecraftButtonComponent"/>
	<!-- COMMENT extensions -->
	<using alias="extension.minecraft.background.default"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.impl.minecraft.mvvm.extensions.background.UIDefaultMinecraftBackgroundExtension"/>
	<using alias="extension.user_relocatable"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.impl.mvvm.views.components.extensions.relocatable.UITeleportingComponentUserRelocatableExtension"/>
	<using alias="extension.user_resizable"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.impl.mvvm.views.components.extensions.resizable.UITeleportingComponentUserResizableExtension"/>

	<!-- SECTION view -->
	<view class="view.minecraft">
		<extension class="extension.minecraft.background.default">
			<renderer-container name="ViewBackgroundRenderer"/>
		</extension>
	</view>

	<!-- SECTION components -->
	<component class="component.manager" name="Root">
		<shape class="shape.rectangle"/>

		<renderer-container name="RootRenderer"/>

		<component class="component.window" name="Window1">
			<shape class="shape.rectangle" x="10" y="10" width="100" height="100"/>
			<anchor target="WindowAnchored" originSide="LEFT" targetSide="RIGHT" borderThickness="5"/>

			<renderer-container name="Window1Renderer"/>

			<property key="default:property.window.control_bar.side">
				<side>DOWN</side>
			</property>
			<property key="default:property.window.minimum_visible_thickness"
			          bindingKey="default:window1MinimumVisibleThickness"/>

			<extension class="extension.user_relocatable">
				<property key="default:property.teleporting.activation.mouse">
					<val:set>
						<val:int>1</val:int><!-- COMMENT right -->
						<val:int>2</val:int><!-- COMMENT middle -->
					</val:set>
				</property>
				<property key="default:property.teleporting.relocate_borders">
					<val:map>
						<val:entry>
							<val:any>
								<side>RIGHT</side>
							</val:any>
							<val:any>
								<val:double>20</val:double>
							</val:any>
						</val:entry>
						<val:entry>
							<val:any>
								<side>DOWN</side>
							</val:any>
							<val:any>
								<val:double>50</val:double>
							</val:any>
						</val:entry>
					</val:map>
				</property>
				<renderer-container name="Window1ExtensionRelocatableRenderer"/>
			</extension>
			<extension class="extension.user_resizable">
				<property key="default:property.teleporting.resize_borders">
					<val:map>
						<val:entry>
							<val:any>
								<side>RIGHT</side>
							</val:any>
							<val:any>
								<val:double>20</val:double>
							</val:any>
						</val:entry>
						<val:entry>
							<val:any>
								<side>DOWN</side>
							</val:any>
							<val:any>
								<val:double>50</val:double>
							</val:any>
						</val:entry>
					</val:map>
				</property>
				<renderer-container name="Window1ExtensionResizableRenderer"/>
			</extension>
		</component>

		<component class="component.window" name="WindowAnchored">
			<shape class="shape.rectangle" x="50" y="50" width="200" height="200">
				<constraint minX="20"/>
			</shape>

			<renderer-container name="WindowAnchoredRenderer"/>

			<extension class="extension.user_relocatable">
				<renderer-container name="WindowAnchoredExtensionRelocatableRenderer"/>
			</extension>
			<extension class="extension.user_resizable">
				<renderer-container name="WindowAnchoredExtensionResizableRenderer"/>
			</extension>

			<component class="component.button" name="Button1">
				<shape class="shape.ellipse" width="100" height="100">
					<affineTransformDefiner>
						<method name="rotate">1,1</method>
						<method name="translate" delimiter=" ">10 10</method>
					</affineTransformDefiner>
				</shape>

				<renderer-container name="Button1Renderer"/>

				<property key="default:method.button.activate" bindingKey="default:buttonOnActivate"/>
				<property key="default:method.button.activated" bindingKey="default:buttonOnActivated"/>
			</component>
		</component>
	</component>
</ui>
