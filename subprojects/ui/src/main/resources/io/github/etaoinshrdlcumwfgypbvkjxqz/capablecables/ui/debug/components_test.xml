<?xml version="1.0" encoding="UTF-8" ?>
<ui xmlns="https://github.com/etaoinshrdlcumwfgypbvkjxqz/Capable-Cables/schemas/ui/components"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation=""
    xml:lang="EN">
	<!-- SECTION using -->

	<!-- COMMENT shapes -->
	<using alias="shape.rectangle" target="java.awt.geom.Rectangle2D"/>
	<using alias="shape.ellipse" target="java.awt.geom.Ellipse2D"/>
	<!-- COMMENT views -->
	<using alias="view.minecraft"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.minecraft.mvvm.views.components.UIViewComponentMinecraft"/>
	<!-- COMMENT components -->
	<using alias="component.manager"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.minecraft.mvvm.views.components.UIComponentManagerMinecraft"/>
	<using alias="component.window"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.minecraft.mvvm.views.components.impl.UIComponentWindowMinecraft"/>
	<using alias="component.button"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.minecraft.mvvm.views.components.impl.UIComponentButtonMinecraft"/>
	<!-- COMMENT extensions -->
	<using alias="extension.minecraft.background.default"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.minecraft.mvvm.extensions.background.DefaultUIExtensionMinecraftBackground"/>
	<using alias="extension.minecraft.background.renderer.default"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.minecraft.mvvm.extensions.background.UIExtensionMinecraftBackgroundDefaultBackgroundRenderer"/>
	<using alias="extension.user_relocatable"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.mvvm.views.components.extensions.relocatable.UITeleportingComponentUserRelocatableExtension"/>
	<using alias="extension.user_resizable"
	       target="io.github.etaoinshrdlcumwfgypbvkjxqz.capablecables.ui.mvvm.views.components.extensions.resizable.UITeleportingComponentUserResizableExtension"/>

	<!-- SECTION view -->
	<view class="view.minecraft">
		<extension class="extension.minecraft.background.default">
			<renderer-placeholder name="ViewBackgroundRenderer"/>
		</extension>
	</view>

	<!-- SECTION components -->
	<component class="component.manager" name="Root">
		<shape class="shape.rectangle"/>

		<renderer-placeholder name="RootRenderer"/>

		<component class="component.window" name="Window1">
			<shape class="shape.rectangle" x="10" y="10" width="100" height="100"/>
			<anchor target="WindowAnchored" originSide="LEFT" targetSide="RIGHT" borderThickness="5"/>

			<renderer-placeholder name="Window1Renderer"/>

			<extension class="extension.user_relocatable">
				<renderer-placeholder name="Window1ExtensionRelocatableRenderer"/>
			</extension>
			<extension class="extension.user_resizable">
				<renderer-placeholder name="Window1ExtensionResizableRenderer"/>
			</extension>
		</component>

		<component class="component.window" name="WindowAnchored">
			<shape class="shape.rectangle" x="50" y="50" width="200" height="200">
				<constraint minX="20"/>
			</shape>

			<renderer-placeholder name="WindowAnchoredRenderer"/>

			<extension class="extension.user_relocatable">
				<renderer-placeholder name="WindowAnchoredExtensionRelocatableRenderer"/>
			</extension>
			<extension class="extension.user_resizable">
				<renderer-placeholder name="WindowAnchoredExtensionResizableRenderer"/>
			</extension>

			<component class="component.button" name="Button1">
				<property key="button.methods.activate" bindingKey="buttonOnActivate"/>
				<property key="button.methods.activated" bindingKey="buttonOnActivated"/>

				<shape class="shape.ellipse" width="100" height="100">
					<affineTransformDefiner>
						<method name="rotate">1,1</method>
						<method name="translate" delimiter=" ">10 10</method>
					</affineTransformDefiner>
				</shape>

				<renderer-placeholder name="Button1Renderer"/>
			</component>
		</component>
	</component>
</ui>
